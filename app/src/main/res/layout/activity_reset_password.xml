<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.calcounterapplication.com.socialmediaapp.ResetPasswordActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Real E-mail!
        We will send your new password to it."
        android:layout_marginRight="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="140dp"
        android:id="@+id/reset_password_massage"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />
    <EditText
        android:background="@color/mainBackground"
        android:padding="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/reset_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_password_massage"
        android:hint="Write Your Email Here"/>
    <Button
        android:layout_below="@id/reset_password_input"
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:text="Reset My Password"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:id="@+id/reset_password_button"
        android:background="@drawable/button"/>

</RelativeLayout>
