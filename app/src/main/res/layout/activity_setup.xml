<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context="app.calcounterapplication.com.socialmediaapp.SetupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile" />

    <EditText
        android:id="@+id/setup_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/setup_profile_image"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/inputs"
        android:padding="14dp"
        android:drawableLeft="@drawable/username"
        android:hint="User Name"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/setup_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs"
        android:padding="14dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:drawableLeft="@drawable/name"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setup_user_name"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/setup_country_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/inputs"
        android:padding="14dp"
        android:drawableLeft="@drawable/country"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setup_fullname"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Country"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/setup_save_information"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_country_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:background="@drawable/inputs"
        android:padding="14dp"
        android:text="Save" />


</RelativeLayout>
